{
  "name": "chat-analytics",
  "version": "1.0.0",
  "scripts": {
    "build": "webpack build --env production --progress",
    "stats": "webpack build --env production --profile --json > stats.json",
    "dev": "webpack serve --progress",
    "test": "jest --verbose --coverage",
    "test:watch": "jest --watchAll",
    "format": "prettier --write .",
    "format-check": "prettier --check ."
  },
  "author": "Martin Emiliano Lombardo <to@mlomb.me>",
  "license": "MIT",
  "devDependencies": {
    "@amcharts/amcharts5": "^5.1.12",
    "@tippyjs/react": "^4.2.6",
    "@types/jest": "^27.4.1",
    "@types/react": "^18.0.1",
    "@types/react-dom": "^18.0.0",
    "@types/react-window": "^1.8.5",
    "@types/webpack-env": "^1.16.3",
    "autoprefixer": "^10.4.4",
    "copy-webpack-plugin": "^10.2.4",
    "css-loader": "^6.7.1",
    "cssnano": "^5.1.7",
    "emoji-regex": "^10.1.0",
    "fflate": "^0.7.3",
    "html-inline-css-webpack-plugin": "^1.11.1",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^27.5.1",
    "less": "^4.1.2",
    "less-loader": "^10.2.0",
    "mini-css-extract-plugin": "~2.6.0",
    "postcss-loader": "^6.2.1",
    "prettier": "^2.6.2",
    "pretty-bytes": "^6.0.0",
    "react": "^18.0.0",
    "react-countup": "^6.2.0",
    "react-dom": "^18.0.0",
    "react-intersection-observer": "^8.33.1",
    "react-window": "^1.8.6",
    "ts-jest": "^27.1.4",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.3",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.8.1",
    "whatsapp-chat-parser": "^3.2.1"
  },
  "jest": {
    "roots": [
      "<rootDir>/tests"
    ],
    "moduleNameMapper": {
      "^@app/(.*)$": "<rootDir>/app/$1",
      "^@assets/(.*)$": "<rootDir>/assets/$1",
      "^@pipeline/(.*)$": "<rootDir>/pipeline/$1",
      "^@report/(.*)$": "<rootDir>/report/$1"
    },
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  }
}
